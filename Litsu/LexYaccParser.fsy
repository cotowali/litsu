%{
open Litsu.SyntaxTree
%}

%start program

%token EOF
%token <int64> INT

%token PLUS MINUS
%left  PLUS MINUS

%type <SyntaxTree.Node> program

%%

program:
  | expr EOF { Node.Expr $1 }

expr:
  | expr PLUS  expr { Expr.Add($1, $3) }
  | expr MINUS expr { Expr.Sub($1, $3) }
  | INT { Expr.Int $1 }
